ord = (char: @string) {
	if char.length == 1 {
		b64 = $.b64encode(char)
		return ascii_table.index(b64)
	} else {
		throw "Parameter 'char' must be a single character."
	}
}

chr = (int: @number) {
	if int < 256 {
		return $.b64decode(ascii_table[int])
	} else {
		throw "Ascii code cannot be bigger than 255."
	}
}

return {
	ord: ord,
	chr: chr
